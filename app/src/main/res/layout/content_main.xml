<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/btnAsuncion"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="140dp"
        android:text="Asuncion"
        android:onClick="openAsuncion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLomaPlata"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="Loma Plata"
        android:onClick="openLoma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEncarnacion" />

    <Button
        android:id="@+id/btnVillaRica"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:text="Villarrica"
        android:onClick="openVillarrica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLomaPlata"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/btnEncarnacion"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="Encarnacion"
        android:onClick="openEncarnacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCDE" />

    <Button
        android:id="@+id/btnCDE"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="Ciudad del Este"
        android:onClick="openCDE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsuncion" />

</androidx.constraintlayout.widget.ConstraintLayout>